<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<table>
  <form action="/houses/<%= house._id %>?_method=PUT" method="POST">
  <tr>
    <th colspan="2">Update House Details</th>
</tr>
<tr>
  <td>Price ($) </td>
  <td> <input type="text" name="price" id="price" value="<%= house.price %>" required /></td>
</tr>
<tr>
  <td>Property Type</td>
  <td><select name="propertyType" id="propertyType">
    <option value="<%= house.propertyType %>">
      <%= house.propertyType %>
    </option>
    <option value="single_family">Single Family</option>
    <option value="townhomes">Town House</option>
    <option value="condos">Condo</option>
    <option value="multi_family">Multi Family</option>
    <option value="condos">land</option>
    <option value="condos">mobile</option>
  </select>
</td>
</tr>
<tr>
  <td>Bedrooms</td>
  <td><input type="text" name="bedrooms" id="bedrooms" value="<%= house.bedrooms %>" required /></td>
</tr>
<tr>
  <td>Bathrooms</td>
  <td><input type="text" name="bathrooms" id="bathrooms"  value="<%= house.bathrooms %>" required /></td>
</tr>
<tr>
  <td>Size (sq ft)</td>
  <td><input type="text" name="size" id="size" value="<%= house.size %>" required /></td>
</tr>
<tr>
  <td>Built Year</td>
  <td><input type="text" name="builtYear" id="builtYear" value="<%= house.builtYear %>" required /></td>
</tr>
<tr>
  <td>Visted</td>
  <td><select name="visited">
    <option value="<%= house.visited %>">
      <%= house.visited %>
    </option>
    <option value="Yes">Yes</option>
    <option value="No">No</option>
  </select>
  </td>
</tr>

<tr>
  <td>
    Street Name
  </td>
  <td>
    <input type="text" name="streetName" id="streetName" value="<%= house.address.streetName %>" required />
  </td>
</tr>

<tr>
  <td>
    Apartment Number
  </td>
  <td>
    <input type="text" name="apartmentNumber" id="apartmentNumber" value="<%= house.address.apartmentNumber %>" required />
  </td>
</tr>

<tr>
  <td>
    City
  </td>
  <td>
    <input type="text" name="city" id="city" value="<%= house.address.city %>" required />
  </td>
</tr>

<tr>
  <td>
    State
  </td>
  <td>
    <input type="text" name="state" id="state" value="<%= house.address.state %>" required />
  </td>
</tr>

<tr>
  <td>
    Country
  </td>
  <td>
    <input type="text" name="country" id="country" value="<%= house.address.country %>" required />
  </td>
</tr>

<tr>
  <td>
    Zip Code
  </td>
  <td>
    <input type="text" name="zipCode" id="zipCode" value="<%= house.address.zipCode %>" required />
  </td>
</tr>


<tr>
  <td>
    Neighborhood
  </td>
  <td>
    <input type="text" name="neighborhood" id="neighborhood" value="<%= house.address.neighborhood %>" required />
  </td>
</tr>



<tr>
  <th class="form-button" colspan="2"><button type="submit">Update Details</button></th>
</tr>
</form>
</table>
<%- include('../partials/footer') %>